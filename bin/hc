#!/usr/bin/env ruby

$:.unshift File.expand_path("../../lib", __FILE__)

require "hc"
require "rest-client"
require "uri"
require "shellwords"
require "json"
require "ansi"
require "readline"

config = YAML.load(File.read(ARGV.first)).to_h
profile = Hc::Profile.new(config)

begin
  profile.start!
rescue Interrupt
end

puts "[bye]"
exit 0
